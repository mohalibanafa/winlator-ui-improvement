<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="@color/colorGlow" />
        </shape>
    </item>
    <!-- Inner surface with crisp stroke -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/colorSurface" />
            <stroke android:width="1dp" android:color="@color/colorStroke" />
        </shape>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="@color/colorGlow" />
        </shape>
    </item>
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/colorSurface" />
            <stroke android:width="1dp" android:color="@color/colorStroke" />
        </shape>
    </item>
</layer-list>